<div class="container">
	<div class="row">
			<%= render 'books/sidebar', book: @book , user: @user%>
		<div class="col-xs-9">
			<h1>Users</h1>
				<table class="table">
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
					<% @users.each do |user| %>
					<tr>
					<td width="250"><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: "no_image_copy.jpg" %></td>
					<td width="400"><%= user.name %></td>
					<td>
						<%= link_to "Show", user_path(user) %>
					</td>
					</tr>
					<% end %>
				</table>
		</div>
	</div>
</div>