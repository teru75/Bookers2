<div class="body">
<div class="container">
<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label for="user_name">Name</label>
    <%= f.text_field :name, autofocus: true, class:"form-control",id:"user_name" %>
    <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
  </div>
  <div class="field">
    <label for="user_email">Email</label>
    <%= f.email_field :email, class:"form-control",id:"user_Email" %>
    <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
  </div>

  <div class="field">
    <p>Postal Code</p>
    <%= f.text_field :postcode %>
    <p>Prefecture</p>
    <%= f.text_field :prefecture_code, collection: JpPrefecture::Prefecture.all, :value_method => :name, include_blank: '都道府県' %><br>
    <p>City</p>
    <%= f.text_field :address_city %>
    <p>Street</p>
    <%= f.text_field :address_street %>
    <p>Buiding Name</p>
    <%= f.text_field :address_building %>
    <%= f.submit %>
  </div>

  <div class="field">
    <label for="user_password">Password</label><em>(6 characters minimum)</em>
    <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"user_password" %>
        <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
  </div>

   <div class="field">
        <label for="user_password_cofirmation">Password</label>
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"user_password_cofirmation" %>
         <span class="fa fa-check-circle-o form-control-icon" aria-hidden="true"></span>
    </div>
        <%= f.submit "Sign up", class:"btn btn-signup2 btn-base-1 mt-20" %>
<% end %>
<%= link_to "Log in", user_session_path %>
</div>
</div>

