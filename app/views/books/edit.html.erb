<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
		<h1>Editing Book</h1>
		<div>
		<%= render 'books/error_message', book: @book %>
		</div>
		<div>
		<%= form_for(@book) do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title, autofocus: true, class:"form-control"%>
		<h4>Opinion</h4>
		<%= f.text_area :body ,autofocus: true, class:"form-control" %>
		<%= f.submit "Update Book", class:"btn btn-update-book btn-block btn-base-1 mt-20" %>
		<% end %>
		</div>
		<div class="showback">
		<%= link_to "Show", book_path(@book) %>
		<span>|</span>
		<%= link_to"Back", books_path %>
		</div>
	</div>
	</div>
</div>