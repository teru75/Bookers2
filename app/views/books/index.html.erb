<div class="container">
	<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
	<%= render 'books/error_message', book: @book %>
	<div class="row">
			<%= render 'books/sidebar', book: @book, user: current_user %>
		<div class="col-xs-9">
			<h1>Books</h1>
				<table class="table" width="400">
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
						<th></th>
					</tr>
					<% @books.each do |book| %>
					<tr class=>
						<td width="70">
							<%= link_to user_path(book.user_id) do %>
							<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: "no_image_copy.jpg" %></td>
							<% end %>
						<td width="70">
							<%= link_to book_path(book) do %>
							<%= book.title %>
							<% end %>
						</td>
						<td width="70">
							<%= book.body %>
						</td>
						<%if book.favorited_by?(current_user)%>
						<td>
							<%= link_to book_favorites_path(book), method: :delete do %>
							<i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
							<%= book.favorites.count %>
							<% end %>
						</td>
						<% else %>
						<td>
							<%= link_to book_favorites_path(book), method: :post do %>
							<i class="far fa-heart" aria-hidden="true"></i>
							<%= book.favorites.count %>
							<% end %>
						</td>
						<% end %>
						<td>コメント数：<%=book.book_comments.count%></td>
					</tr>
					<% end %>
				</table>
		</div>
	</div>
</div>