<div class="container">
	<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
	<div class="row">
			<%= render 'books/sidebar', book: @book, user: @book.user %>
		<div class="col-xs-9">
			<h1>Book detail</h1>
				<table class="table" width="600">
					<tr>
						<td width="200"><%= link_to(user_path(@book.user_id))do %>
							<%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: "no_image_copy.jpg" %><br><%= @book.user.name %>
							<% end %>
						</td>
						<td width="70">
							<%= link_to(book_path(@book))  do%>
							<%= @book.title %>
							<% end %>
							</td>
						<td width="70"><%= @book.body %></td>
						<% if @book.user == current_user %>
						<td>
							<%= link_to(edit_book_path(@book)) do %><button type="button" class="btn btn-edit2 active">Edit</button>
							<% end %>
						</td>
						<td><%= link_to book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" do %>
							<button type="button" class="btn btn-destroy active">Destroy</button>
							<% end %>
						</td>
						<% end %>
					</tr>
				</table>
		</div>
	</div>
</div>