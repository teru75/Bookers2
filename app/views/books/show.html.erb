<div class="container">
	<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
	<div class="row">
			<%= render 'books/sidebar', book: @book, user: @find.user %>
		<div class="col-xs-9">
			<h1>Book detail</h1>
				<table class="table" width="600">
					<tr>
						<td width="200"><%= link_to(user_path(@find.user_id))do %>
							<%= attachment_image_tag @find.user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: "no_image_copy.jpg" %><br><%= @find.user.name %>
							<% end %>
						</td>
						<td width="70">
							<%= link_to(book_path(@find))  do%>
							<%= @find.title %>
							<% end %>
						</td>
						<td width="70"><%= @find.body %></td>
						<%if @find.favorited_by?(current_user)%>
						<td>
							<%= link_to book_favorites_path(@find), method: :delete do %>
							<i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
							<%= @find.favorites.count %>
							<% end %>
						</td>
						<% else %>
						<td>
							<%= link_to book_favorites_path(@find), method: :post do %>
							<i class="far fa-heart" aria-hidden="true"></i>
							<%= @find.favorites.count %>
							<% end %>
						</td>
						<% end %>
						<td>コメント数：<%= @find.book_comments.count %></td>
						<% if @find.user == current_user %>
						<td>
							<%= link_to(edit_book_path(@find)) do %><button type="button" class="btn btn-edit2 active">Edit</button>
							<% end %>
						</td>
						<td><%= link_to book_path(@find), method: :delete, "data-confirm" => "本当に消しますか？" do %>
							<button type="button" class="btn btn-destroy active">Destroy</button>
							<% end %>
						</td>
						<% end %>
					</tr>
					<tr>
						<td colspan="7">コメント</td>
					</tr>
					<% @find.book_comments.each do |comment| %>
					<tr>
						<td><%= attachment_image_tag comment.user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: "no_image_copy.jpg" %><br><%= comment.user.name %></td>
						<td><%= comment.comment %></td>
						<% if comment.user == current_user %>
						<td><%= link_to book_book_comment_path(@find, comment), method: :delete, "data-confirm" => "本当に消しますか？" do %>
							<button type="button" class="btn btn-destroy active">Destroy</button>
							<% end %>
						<% end %>
						</td>
					</tr>
					<% end %>
				</table>

				<%= form_for [@find, @book_comment] do |c| %>
					<div class="row">
						<%= c.text_area :comment, rows:'5', class:"form-control" %>
					</div>
					<%= c.submit "送信する",class: "btn btn-comment-destroy active " %>
				<%end%>
		</div>
	</div>
</div>