<div class="container">
  <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h1>welcome to <span class="glyphicon glyphicon-book" aria-hidden="true"></span>Bookers !!</h1>
      <p>In <span class="glyphicon glyphicon-book" aria-hidden="true"></span><strong>Bookers</strong>,</p>
      <p>you can share and exchange your opinions , inpressions , and emotions</p>
      <p>about various books!</p>
      <% if user_signed_in? %>
      <%= link_to "log In", user_path(current_user.id),class:"btn btn-login btn-block active" %>
      <%= link_to "Sign Up" ,user_path(current_user.id),class:"btn btn-signup btn-block active" %>
      <% else %>
      <%= link_to "log In", new_user_session_path,class:"btn btn-login btn-block active" %>
      <%= link_to "Sign Up" ,new_user_registration_path,class:"btn btn-signup btn-block active" %>
      <% end %>
    </div>
  </div>
</div>