<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <nav class= "nav navbar-nav navbar-left" >
        <span class="bookers">Bookers</span>
      </nav>
      <nav>
      <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
      <% if user_signed_in? %>
      <li class="icon">
        <%= link_to(user_path(current_user))do %>
        <span class="glyphicon glyphicon-home" aria-hidden="true"><span class="icon-text">Home</span></span>
        <% end %>
      </li>
      <li class="icon">
        <%= link_to(users_path)do %>
        <span class="glyphicon glyphicon-user" aria-hidden="true"><span class="icon-text">Users</span></span>
        <% end %>
      </li>
      <li class="icon">
        <%= link_to(books_path)do %>
        <span class="glyphicon glyphicon-book" aria-hidden="true"><span class="icon-text">Books</span></span>
        <% end %>
      </li>
      <li class="icon">
        <%= link_to destroy_user_session_path, method: :delete do %>
        <span class="glyphicon glyphicon-log-out" aria-hidden="true"><span class="icon-text">logout</span></span>
      <% end %>
      </li>
      <% else %>
      <li class="icon">
        <%= link_to(root_path)do %>
        <span class="glyphicon glyphicon-home" aria-hidden="true"><span class="icon-text">Home</span></span>
        <% end %>
      </li>
      <li class="icon">
        <%= link_to('home/about')do %>
        <span class="glyphicon glyphicon-link" aria-hidden="true"><span class="icon-text">About</span></span>
        <% end %>
      </li>
      <li class="icon">
        <%= link_to(new_user_registration_path)do %>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"><span class="icon-text">sign up</span></span>
        <% end %>
      </li>
      <li>
        <%= link_to(new_user_session_path)do %>
        <span class="glyphicon glyphicon-log-in" aria-hidden="true"><span class="icon-text">login</span></span>
        <% end %>
      </li>
      <% end %>
      </ul>
      </nav>
    </div>
  </header>
  <% if user_signed_in? %>
  <div class="search-form">
    <%= form_tag(search_path, method: :get) do %>
      <%= text_field_tag 'search[content]' %>
      <%= select_tag 'search[model]', options_for_select({ "User" => "user", "Book" => "book" }) %>
      <%= select_tag 'search[method]', options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
      <%= submit_tag '検索' %>
    <% end %>
  </div>
  <% end %>
  <!-- /header -->
  <body>
    <%= yield %>
  </body>
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-xs-3 col-xs-offset-9">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</html>
